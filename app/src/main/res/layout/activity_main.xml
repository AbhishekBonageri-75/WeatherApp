    <TextView
        android:id="@+id/city_time"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:background="#9267F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_state" />

    <TextView
        android:id="@+id/city_state"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:background="#9267F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="69dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/sunrise"
        android:textColor="#FBFAFA"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cur_sunrise"
        android:layout_width="69dp"
        android:layout_height="24dp"
        android:layout_marginBottom="16dp"
        android:text="-"
        android:textColor="#FBFAFA"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="69dp"
        android:layout_height="24dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="16dp"
        android:text="Sunset: "
        android:textColor="#FBFAFA"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/cur_sunset"
        android:layout_width="69dp"
        android:layout_height="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:text="-"
        android:textColor="#FBFAFA"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="0dp"
        android:layout_height="144dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/weather_icon"
        android:layout_width="192dp"
        android:layout_height="113dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_time"
        app:srcCompat="@drawable/_04n" />

    <TextView
        android:id="@+id/cur_temp"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="-"
        android:textColor="#FAF8F8"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_time" />

    <ImageView
        android:id="@+id/temperature_icon_1"
        android:layout_width="73dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/cur_temp"
        app:layout_constraintTop_toBottomOf="@+id/city_time"
        app:srcCompat="@drawable/units_f" />

    <ImageView
        android:id="@+id/temperature_icon_2"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@+id/cur_feels_like"
        app:layout_constraintTop_toBottomOf="@+id/temperature_icon_1"
        app:srcCompat="@drawable/units_f" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
