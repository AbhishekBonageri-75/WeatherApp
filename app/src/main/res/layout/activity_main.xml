<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/cur_weather_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="128dp"
        android:text="Broken Clouds(75% clouds)"
        android:textColor="#FAF9F9"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_time" />

    <TextView
        android:id="@+id/cur_winddpeed_winddeg_windgust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="E at 5 mph"
        android:textColor="#FAF9F9"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/cur_weather_description" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="8dp"
        android:text="Winds :"
        android:textColor="#FAF9F9"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cur_weather_description" />

    <TextView
        android:id="@+id/d0.temp.night"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginStart="328dp"
        android:layout_marginTop="136dp"
        android:text="-"
        android:textColor="#FAF8F8"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/temperature_icon_6"
        android:layout_width="38dp"
        android:layout_height="31dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="136dp"
        app:layout_constraintStart_toEndOf="@+id/d0.temp.morn"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/units_f" />

    <ImageView
        android:id="@+id/temperature_icon_5"
        android:layout_width="38dp"
        android:layout_height="31dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="136dp"
        app:layout_constraintStart_toEndOf="@+id/d0.temp.morn"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/units_f" />

    <TextView
        android:id="@+id/d0.temp.eve"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="136dp"
        android:text="-"
        android:textColor="#FAF8F8"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/temperature_icon_4"
        android:layout_width="38dp"
        android:layout_height="31dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="136dp"
        app:layout_constraintStart_toEndOf="@+id/d0.temp.morn"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/units_f" />

    <TextView
        android:id="@+id/d0.temp.day"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="136dp"
        android:text="-"
        android:textColor="#FAF8F8"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/temperature_icon_3"
        android:layout_width="38dp"
        android:layout_height="31dp"
        android:layout_marginTop="136dp"
        app:layout_constraintStart_toEndOf="@+id/d0.temp.morn"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/units_f" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="296dp"
        android:text="8 AM"
        android:textColor="#FBF9F9"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_time" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="296dp"
        android:text="1 PM"
        android:textColor="#FBF9F9"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/city_time" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
