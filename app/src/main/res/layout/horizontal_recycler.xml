<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/h_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/h_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/h_day"
        app:layout_constraintStart_toStartOf="@+id/h_day"
        app:layout_constraintTop_toBottomOf="@+id/h_day" />

    <ImageView
        android:id="@+id/h_icon"
        android:layout_width="47dp"
        android:layout_height="51dp"
        app:layout_constraintEnd_toEndOf="@+id/h_time"
        app:layout_constraintStart_toStartOf="@+id/h_time"
        app:layout_constraintTop_toBottomOf="@+id/h_time"
        app:srcCompat="@drawable/_03n" />

    <TextView
        android:id="@+id/h_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/h_icon"
        app:layout_constraintStart_toStartOf="@+id/h_icon"
        app:layout_constraintTop_toBottomOf="@+id/h_icon" />

    <ImageView
        android:id="@+id/h_unit"
        android:layout_width="27dp"
        android:layout_height="22dp"
        app:layout_constraintStart_toEndOf="@+id/h_temp"
        app:layout_constraintTop_toTopOf="@+id/h_temp"
        app:srcCompat="@drawable/units_f" />

    <TextView
        android:id="@+id/h_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/h_icon"
        app:layout_constraintStart_toStartOf="@+id/h_icon"
        app:layout_constraintTop_toBottomOf="@+id/h_temp" />

</androidx.constraintlayout.widget.ConstraintLayout>